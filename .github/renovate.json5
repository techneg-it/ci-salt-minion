{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  enabledManagers: [
    'copier',
    'custom.regex',
    'dockerfile',
    'git-submodules',
  ],
  extends: [
    ':automergeDigest',
    ':automergeMinor',
    ':semanticPrefixChore',
    'config:recommended',
    'docker:pinDigests',
  ],
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '.schedule-version',
      ],
      matchStrings: [
        '(?<currentValue>\\S+)\\n',
      ],
      datasourceTemplate: 'github-tags',
      depNameTemplate: 'techneg-it/ci-salt-minion',
    },
  ],
  'git-submodules': {
    enabled: true,
  },
  packageRules: [
    {
      matchFileNames: [
        '.schedule-version',
      ],
      extends: [
        ':semanticPrefixFix',
        'schedule:weekly',
      ],
      commitMessageAction: '',
      commitMessageExtra: '({{prettyNewVersion}})',
      commitMessageTopic: 'Scheduled update',
      minimumReleaseAge: '1 day',
      platformAutomerge: false,
    },
    {
      matchManagers: [
        'git-submodules',
      ],
      automerge: true,
    },
  ],
}
